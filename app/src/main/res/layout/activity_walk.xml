<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.org.cacophony.cacophonometerlite.WalkActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"

        >

        <RelativeLayout
            android:id="@+id/relative_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:id="@+id/walkScreenTitle"
                android:text="@string/walk_screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/walkScreenInfo"
                android:text="@string/walk_screen_intructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/walkScreenTitle"

                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp" />




            <Button
                android:id="@+id/recordNowButton"
                android:text="@string/record_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/walkScreenInfo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:onClick="recordNowButtonClicked" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/enableDisableRadioButtons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/recordNowButton">
                <RadioButton android:id="@+id/periodicRecordingsDisabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/periodic_recordings_disabled"
                    android:onClick="onPeriodicRecordingsRadioButtonClicked"/>
                <RadioButton android:id="@+id/periodicRecordingsEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/periodic_recordings_enabled"
                    android:onClick="onPeriodicRecordingsRadioButtonClicked"/>
            </RadioGroup>

            <Button
                android:id="@+id/uploadRecordings"
                android:text="@string/upload_recordings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/enableDisableRadioButtons"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:onClick="uploadRecordingsButtonClicked" />







        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
